{
  "entrypoint": "index.html",
  "shell": "src/vacc-app.html",
  "fragments": [
    "src/vacc-home.html",
    "src/vacc-pilots.html",
    "src/vacc-controllers.html",
    "src/vacc-airports.html",
    "src/vacc-events.html",
    "src/vacc-about.html",
    "src/vacc-404.html"
  ],
  "sources": [
    "images/**/*",
    "src/**/*",
    "data/**/*"
  ],
  "extraDependencies": [
    "bower_components/webcomponentsjs/*.js",
    "!bower_components/webcomponentsjs/gulpfile.js",
    "manifest.json"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [
    {
      "preset": "es5-bundled"
    },
    {
      "preset": "es6-bundled"
    },
    {
      "preset": "es6-unbundled"
    }
  ]
}
